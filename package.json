{
  "name": "personal-website",
  "version": "1.0.0",
  "main": "server/app.ts",
  "scripts": {
    "build": "rimraf dist && npx tsc && npx tailwindcss -i src/styles/input.css -o public/css/output.css",
    "start": "npm run build && node dist/app.js",
    "dev": "concurrently \"npx tsc -w\" \"nodemon --watch dist dist/app.js\" \"npx tailwindcss -i src/styles/input.css -o public/css/output.css --watch\""
  },
  "author": "Aidanbh16",
  "license": "ISC",
  "description": "Personal Website",
  "dependencies": {
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2"
  }
}
